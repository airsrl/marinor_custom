<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="35"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_info']/group/group[@name='sale_info_group']" position="inside">

                    <field name="bank_name"/>


                </xpath>
                <xpath expr="//page[@name='other_info']/group/group[@name='accounting_info_group']" position="inside">
                    <field name="ref_purchase_id" string="Referente acquisti" attrs="{'invisible': [('move_type', 'in', ('out_invoice', 'out_refund'))]}"/>
                    <field name="x_mrn"/>


                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']" position="after">
                    <group>
                        <field name="tot_qty"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='invoice_user_id']" position="replace">
                    <field name="invoice_user_id" domain="[(1, '=', 1)]" widget="many2one_avatar_user"/>
                </xpath>

            </field>
        </record>
        <!-- Inherit Form View to Modify it -->
        <record id="purchase_user_view_account_invoice_filter" model="ir.ui.view">
            <field name="name">account.move.search</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//group" position="inside">
                    <field name="ref_purchase_id" string="Referente acquisti"/>
                    <filter string="Referente acquisti" name="ref_purchase" context="{'group_by':'ref_purchase_id'}"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>